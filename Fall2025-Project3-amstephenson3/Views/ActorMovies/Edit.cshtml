@model Fall2025_Project3_amstephenson3.Controllers.ActorMovieEditVM
@{
    ViewData["Title"] = "Edit Relationship";
}
<h1>Edit Relationship</h1>
<hr />

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="OriginalActorId" />
    <input type="hidden" asp-for="OriginalMovieId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Actor</label>
        <select asp-for="ActorId" class="form-select" asp-items="ViewBag.ActorId"></select>
        <span asp-validation-for="ActorId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Movie</label>
        <select asp-for="MovieId" class="form-select" asp-items="ViewBag.MovieId"></select>
        <span asp-validation-for="MovieId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
