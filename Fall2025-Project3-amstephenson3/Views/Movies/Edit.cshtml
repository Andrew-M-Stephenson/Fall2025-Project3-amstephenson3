@model Fall2025_Project3_amstephenson3.Models.Movie

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImdbUrl" class="form-label"></label>
                <input asp-for="ImdbUrl" class="form-control" placeholder="https://www.imdb.com/title/ttXXXXXXX/" />
                <span asp-validation-for="ImdbUrl" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Genre" class="form-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Year" class="form-label"></label>
                <input asp-for="Year"
                       type="text"
                       inputmode="numeric"
                       placeholder="e.g., 1994"
                       class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label d-block">Current Poster</label>
                @if (Model?.Poster is not null)
                {
                    <img src="@Url.Action("Poster", "Movies", new { id = Model.Id })"
                         alt="Poster"
                         style="max-height:160px; border:1px solid #ddd; padding:4px; border-radius:6px;" />
                }
                else
                {
                    <div class="text-muted">No poster uploaded.</div>
                }
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Upload New Poster (optional)</label>
                <input type="file" name="posterFile" class="form-control" accept="image/*" />
                <small class="text-muted">Leave blank to keep the existing poster.</small>
            </div>

            <div class="d-flex gap-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
