@model IEnumerable<Fall2025_Project3_amstephenson3.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<div class="container py-4">

    <!--HEADER-->
    <div class="row justify-content-between align-items-center mb-4">
        <div class="col-lg-8">
            <h1 class="mb-2">Movies</h1>
            <p class="text-muted mb-0">
                Manage your movie library: upload posters, set genres and release years, attach IMDB links,
                and view AI-generated reviews with sentiment analysis on each movie’s details page.
            </p>
        </div>
        <div class="col-lg-4 mt-3 mt-lg-0 d-flex justify-content-lg-end justify-content-start">
            <a class="btn btn-primary btn-lg" asp-action="Create">
                + Add New Movie
            </a>
        </div>
    </div>

    <!--STATS BAR-->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex flex-wrap gap-3 p-3 rounded-3 bg-light border">
                <div>
                    <span class="fw-semibold">Total movies:</span>
                    <span class="badge bg-primary-subtle text-primary border border-primary-subtle ms-1">
                        @(Model?.Count() ?? 0)
                    </span>
                </div>
                <div class="text-muted small">
                    Tip: Open a movie’s <strong>Details</strong> page to see AI-generated reviews and
                    VaderSharp2 sentiment scores.
                </div>
            </div>
        </div>
    </div>

    <!--TABLE-->
    @if (Model is null || !Model.Any())
    {
        <div class="alert alert-info">
            No movies yet. Click <strong>Add New Movie</strong> to create your first one.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title mb-0">Movie list</h5>
                    <span class="text-muted small">Use the search box and column headers to filter and sort.</span>
                </div>

                <table id="grid" class="table table-striped align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>IMDB</th>
                            <th>Genre</th>
                            <th>Year</th>
                            <th>Poster</th>
                            <th style="width: 180px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.ImdbUrl))
                                    {
                                        <a href="@item.ImdbUrl" target="_blank" rel="noopener">IMDB</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>@item.Genre</td>
                                <td>@(item.Year?.ToString() ?? "—")</td>
                                <td>
                                    @if (item.Poster is not null)
                                    {
                                        <img src="@Url.Action("Poster", "Movies", new { id = item.Id })"
                                             alt="Poster"
                                             style="height:80px; border:1px solid #ddd; padding:2px; border-radius:6px;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">No poster</span>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

</div>

@section Scripts {
    <script>
        $(function () {
            $('#grid').DataTable({
                paging: true,
                searching: true,
                order: [],
                autoWidth: false
            });
        });
    </script>
}
