@model Fall2025_Project3_amstephenson3.Models.ViewModels.MovieDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Movie Details</h1>

<div class="row">
    <div class="col-md-8 col-lg-7">
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Movie.Title</dd>

            <dt class="col-sm-3">IMDB</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrWhiteSpace(Model.Movie.ImdbUrl))
                {
                    <a href="@Model.Movie.ImdbUrl" target="_blank" rel="noopener">@Model.Movie.ImdbUrl</a>
                }
                else
                {
                    <span class="text-muted">—</span>
                }
            </dd>

            <dt class="col-sm-3">Genre</dt>
            <dd class="col-sm-9">@Model.Movie.Genre</dd>

            <dt class="col-sm-3">Year</dt>
            <dd class="col-sm-9">@((Model.Movie.Year?.ToString()) ?? "—")</dd>

            <dt class="col-sm-3">Poster</dt>
            <dd class="col-sm-9">
                @if (Model.Movie.Poster is not null)
                {
                    <img src="@Url.Action("Poster", "Movies", new { id = Model.Movie.Id })"
                         alt="Poster"
                         style="max-height:240px; border:1px solid #ddd; padding:4px; border-radius:8px;" />
                }
                else
                {
                    <span class="text-muted">No poster</span>
                }
            </dd>
        </dl>
    </div>
</div>

<!-- Cast -->
<h4 class="mt-4">Cast</h4>
@if (Model.Actors?.Any() == true)
{
    <ul>
        @foreach (var a in Model.Actors)
        {
            <li>@a</li>
        }
    </ul>
}
else
{
    <div class="text-muted">No actors linked yet.</div>
}

<hr class="my-4" />

<!-- AI Reviews + Sentiment -->
<h3>
    Overall sentiment: <strong>@Model.OverallLabel</strong>
    <small class="text-muted">(avg @Model.AverageCompound.ToString("0.00"))</small>
</h3>

@if (Model.Reviews?.Any() == true)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>AI Review</th>
                <th style="width:160px;">Sentiment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Reviews)
            {
                <tr>
                    <td>@r.Text</td>
                    <td>
                        <span class="badge @(r.Label == "Positive" ? "bg-success" : r.Label == "Negative" ? "bg-danger" : "bg-secondary")">
                            @r.Label
                        </span>
                        <span class="text-muted ms-2">@r.Compound.ToString("0.00")</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No AI-generated reviews yet.</div>
}

<div class="mt-3 d-flex gap-2">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Movie.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
