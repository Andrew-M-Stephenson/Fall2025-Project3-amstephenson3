@* AI used for help with hero layout and styling *@
@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">

    <!--HERO SECTION-->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-11">
            <div class="position-relative overflow-hidden rounded-4 shadow-sm"
                 style="background: linear-gradient(135deg, #0d6efd 0%, #6610f2 45%, #6f42c1 100%);">

                <!--subtle overlay-->
                <div class="position-absolute top-0 start-0 w-100 h-100"
                     style="background: radial-gradient(circle at top left, rgba(255,255,255,0.25), transparent 55%); mix-blend-mode: screen; opacity: 0.9;">
                </div>

                <div class="row position-relative z-1 p-4 p-lg-5 align-items-center text-white">
                    <div class="col-lg-7">
                        <div class="mb-3 d-flex flex-wrap gap-2">
                            <span class="badge bg-light text-primary-emphasis rounded-pill px-3 py-2">
                                🎬 ASP.NET Core MVC
                            </span>
                            <span class="badge bg-light text-primary-emphasis rounded-pill px-3 py-2">
                                🤖 Azure OpenAI + VaderSharp2
                            </span>
                            <span class="badge bg-light text-primary-emphasis rounded-pill px-3 py-2">
                                ☁️ Azure SQL
                            </span>
                        </div>

                        <h1 class="display-5 fw-bold mb-3">
                            Manage movies &amp; actors with built-in AI.
                        </h1>

                        <p class="lead mb-4 text-white-50">
                            Store movies and actors, link them together, and let AI generate reviews and tweets
                            with automatic sentiment analysis—all in one place.
                        </p>

                        <div class="d-flex flex-wrap gap-3 mb-3">
                            <a class="btn btn-light btn-lg fw-semibold px-4"
                               asp-controller="Movies" asp-action="Index">
                                Browse Movies
                            </a>
                            <a class="btn btn-outline-light btn-lg px-4"
                               asp-controller="Actors" asp-action="Index">
                                Browse Actors
                            </a>
                        </div>

                        <p class="mb-0 text-white-50 small">
                            Start by adding a few movies and actors, then explore the AI-generated reviews and tweets
                            on each details page.
                        </p>
                    </div>

                    <div class="col-lg-5 mt-4 mt-lg-0">
                        <div class="bg-white bg-opacity-10 border border-light border-opacity-25 rounded-4 p-4 h-100">
                            <h5 class="fw-semibold mb-3">What this site lets you do</h5>
                            <ul class="list-unstyled mb-0 small">
                                <li class="mb-2">
                                    ✅ Create movies with posters, genres, years, and IMDB links.
                                </li>
                                <li class="mb-2">
                                    ✅ Add actors with photos and secure their filmography.
                                </li>
                                <li class="mb-2">
                                    ✅ Link actors to movies with clean, duplicate-free relationships.
                                </li>
                                <li class="mb-2">
                                    ✅ Use AI to generate movie reviews &amp; actor “tweets” plus sentiment scores.
                                </li>
                                <li class="mb-0">
                                    ✅ Explore sortable, searchable tables powered by DataTables.
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--cards-->
    <div class="row g-4">
        <!-- Movies -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-primary-subtle text-primary d-inline-flex align-items-center justify-content-center me-3"
                             style="width:48px;height:48px;">
                            <span class="fw-bold">🎬</span>
                        </div>
                        <h5 class="card-title mb-0">Movies</h5>
                    </div>
                    <p class="card-text text-muted mb-4">
                        Create, edit, and manage movies. Upload posters, link to IMDB, and view
                        AI-generated reviews with sentiment scores on the details page.
                    </p>
                    <div class="mt-auto d-flex gap-2">
                        <a asp-controller="Movies" asp-action="Index" class="btn btn-primary">Open</a>
                        <a asp-controller="Movies" asp-action="Create" class="btn btn-outline-primary">Add Movie</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actors -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-success-subtle text-success d-inline-flex align-items-center justify-content-center me-3"
                             style="width:48px;height:48px;">
                            <span class="fw-bold">🎭</span>
                        </div>
                        <h5 class="card-title mb-0">Actors</h5>
                    </div>
                    <p class="card-text text-muted mb-4">
                        Add actors with photos and IMDB links. See AI-generated “tweets” about each actor,
                        complete with sentiment analysis summaries.
                    </p>
                    <div class="mt-auto d-flex gap-2">
                        <a asp-controller="Actors" asp-action="Index" class="btn btn-success">Open</a>
                        <a asp-controller="Actors" asp-action="Create" class="btn btn-outline-success">Add Actor</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Relationships -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-info-subtle text-info d-inline-flex align-items-center justify-content-center me-3"
                             style="width:48px;height:48px;">
                            <span class="fw-bold">🔗</span>
                        </div>
                        <h5 class="card-title mb-0">Relationships</h5>
                    </div>
                    <p class="card-text text-muted mb-4">
                        Link actors to movies using a dedicated relationship table. Enjoy DataTables-powered
                        search and sorting while preventing duplicate links.
                    </p>
                    <div class="mt-auto d-flex gap-2">
                        <a asp-controller="ActorMovies" asp-action="Index" class="btn btn-info text-white">Open</a>
                        <a asp-controller="ActorMovies" asp-action="Create" class="btn btn-outline-info">Add Link</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="text-center text-muted mt-5">
        <small>
            Built with ASP.NET Core MVC • Azure SQL • Azure OpenAI • VaderSharp2 • DataTables
        </small>
    </div>
</div>
