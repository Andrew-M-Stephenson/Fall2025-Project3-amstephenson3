@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <!--hero section-->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-10">
            <div class="p-5 rounded-4 shadow-sm bg-light">
                <h1 class="display-5 fw-bold mb-3 text-center">Movie & Actor Manager</h1>
                <p class="lead text-muted text-center mb-4">
                    Add movies and actors, link them together, and use AI to generate reviews and “tweets” with sentiment analysis.
                </p>
                <div class="d-flex justify-content-center gap-3">
                    <a class="btn btn-primary btn-lg" asp-controller="Movies" asp-action="Index">Browse Movies</a>
                    <a class="btn btn-outline-primary btn-lg" asp-controller="Actors" asp-action="Index">Browse Actors</a>
                </div>
            </div>
        </div>
    </div>

    <!--buttons-->
    <div class="row g-4">
        <!--Movies-->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-primary-subtle text-primary d-inline-flex align-items-center justify-content-center me-3" style="width:48px;height:48px;">
                            <span class="fw-bold">🎬</span>
                        </div>
                        <h5 class="card-title mb-0">Movies</h5>
                    </div>
                    <p class="card-text text-muted mb-4">
                        Create, edit, and manage movies. Upload posters, link to IMDB, and view AI-generated reviews with sentiment scoring.
                    </p>
                    <div class="mt-auto d-flex gap-2">
                        <a asp-controller="Movies" asp-action="Index" class="btn btn-primary">Open</a>
                        <a asp-controller="Movies" asp-action="Create" class="btn btn-outline-primary">Add Movie</a>
                    </div>
                </div>
            </div>
        </div>

        <!--Actors-->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-success-subtle text-success d-inline-flex align-items-center justify-content-center me-3" style="width:48px;height:48px;">
                            <span class="fw-bold">🎭</span>
                        </div>
                        <h5 class="card-title mb-0">Actors</h5>
                    </div>
                    <p class="card-text text-muted mb-4">
                        Add actors, upload headshots, and see AI-generated “tweets” about them with Vader sentiment analysis.
                    </p>
                    <div class="mt-auto d-flex gap-2">
                        <a asp-controller="Actors" asp-action="Index" class="btn btn-success">Open</a>
                        <a asp-controller="Actors" asp-action="Create" class="btn btn-outline-success">Add Actor</a>
                    </div>
                </div>
            </div>
        </div>

        <!--Relationships-->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-info-subtle text-info d-inline-flex align-items-center justify-content-center me-3" style="width:48px;height:48px;">
                            <span class="fw-bold">🔗</span>
                        </div>
                        <h5 class="card-title mb-0">Relationships</h5>
                    </div>
                    <p class="card-text text-muted mb-4">
                        Link actors to movies and keep your database clean—no duplicates, easy deletes, and fast lookups.
                    </p>
                    <div class="mt-auto d-flex gap-2">
                        <a asp-controller="ActorMovies" asp-action="Index" class="btn btn-info text-white">Open</a>
                        <a asp-controller="ActorMovies" asp-action="Create" class="btn btn-outline-info">Add Link</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Footer for reference-->
    <div class="text-center text-muted mt-5">
        <small>
            Built with ASP.NET Core MVC • Azure SQL • Azure OpenAI • VaderSharp2
        </small>
    </div>
</div>
