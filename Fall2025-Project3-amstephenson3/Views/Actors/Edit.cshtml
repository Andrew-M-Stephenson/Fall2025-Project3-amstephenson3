@model Fall2025_Project3_amstephenson3.Models.Actor

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Actor</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Gender" class="form-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Age" class="form-label"></label>
                <input asp-for="Age"
                       type="text"
                       inputmode="numeric"
                       placeholder="e.g., 42"
                       class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImdbUrl" class="form-label"></label>
                <input asp-for="ImdbUrl" class="form-control" placeholder="https://www.imdb.com/name/nmXXXXXXX/" />
                <span asp-validation-for="ImdbUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label d-block">Current Photo</label>
                @if (Model?.Photo is not null)
                {
                    <img src="@Url.Action("Photo", "Actors", new { id = Model.Id })"
                         alt="Photo"
                         style="max-height:160px; border:1px solid #ddd; padding:4px; border-radius:6px;" />
                }
                else
                {
                    <div class="text-muted">No photo uploaded.</div>
                }
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Upload New Photo (optional)</label>
                <input type="file" name="photoFile" class="form-control" accept="image/*" />
                <small class="text-muted">Leave blank to keep the existing photo.</small>
            </div>

            @* Do NOT show Photo/PhotoContentType; controller updates when a file is uploaded *@

            <div class="d-flex gap-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
