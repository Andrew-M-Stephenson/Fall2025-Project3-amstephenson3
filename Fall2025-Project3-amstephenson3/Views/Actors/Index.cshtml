@model IEnumerable<Fall2025_Project3_amstephenson3.Models.Actor>

@{
    ViewData["Title"] = "Actors";
}

<div class="container py-4">

    <!--HEADER-->
    <div class="row justify-content-between align-items-center mb-4">
        <div class="col-lg-8">
            <h1 class="mb-2">Actors</h1>
            <p class="text-muted mb-0">
                Manage your actor directory: add photos, IMDB links, and explore AI-generated tweets and
                sentiment analysis on each actor’s details page.
            </p>
        </div>
        <div class="col-lg-4 mt-3 mt-lg-0 d-flex justify-content-lg-end justify-content-start">
            <a class="btn btn-success btn-lg" asp-action="Create">
                + Add New Actor
            </a>
        </div>
    </div>

    <!--STATS BAR-->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex flex-wrap gap-3 p-3 rounded-3 bg-light border">
                <div>
                    <span class="fw-semibold">Total actors:</span>
                    <span class="badge bg-success-subtle text-success border border-success-subtle ms-1">
                        @(Model?.Count() ?? 0)
                    </span>
                </div>
                <div class="text-muted small">
                    Tip: Click a row’s <strong>Details</strong> button to see AI-generated tweets and sentiment.
                </div>
            </div>
        </div>
    </div>

    <!--TABLE-->
    @if (Model is null || !Model.Any())
    {
        <div class="alert alert-info">
            No actors yet. Click <strong>Add New Actor</strong> to create your first one.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title mb-0">Actor list</h5>
                    <span class="text-muted small">Search, sort, and filter using the controls above the table.</span>
                </div>

                <table id="grid" class="table table-striped align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>IMDB</th>
                            <th>Gender</th>
                            <th>Age</th>
                            <th>Photo</th>
                            <th style="width: 220px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.ImdbUrl))
                                    {
                                        <a href="@item.ImdbUrl" target="_blank" rel="noopener">IMDB</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>@(string.IsNullOrWhiteSpace(item.Gender) ? "—" : item.Gender)</td>
                                <td>@(item.Age > 0 ? item.Age.ToString() : "—")</td>
                                <td>
                                    @if (item.Photo is not null)
                                    {
                                        <img src="@Url.Action("Photo", "Actors", new { id = item.Id })"
                                             alt="Photo"
                                             style="height:80px; border:1px solid #ddd; padding:2px; border-radius:6px;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">No photo</span>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

</div>

@section Scripts {
    <script>
        $(function () {
            $('#grid').DataTable({
                paging: true,
                searching: true,
                order: [],
                autoWidth: false
            });
        });
    </script>
}
